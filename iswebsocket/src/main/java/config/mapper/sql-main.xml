<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="main">

	<select id="getToday" resultType="java.lang.String">
		select now()
	</select>

	<select id="getList" parameterType="java.util.Map" resultType="java.util.HashMap">
		select * from tp_cm_header
	</select>

	<select id="getHeader" parameterType="java.util.Map" resultType="java.util.HashMap">
		select * from tp_cm_header_memory
		where cm_svc_no = #{parameter}
	</select>

	<select id="getRequest" parameterType="java.util.Map" resultType="java.util.HashMap">
		select * from tp_cm_req_memory
		where cm_svc_no =
		#{parameter}
	</select>

	<select id="getResponse" parameterType="java.util.Map" resultType="java.util.HashMap">
		select * from tp_cm_res_memory
		where cm_svc_no =
		#{parameter}
		and loop_seq = 0
	</select>

	<select id="getResponseList" parameterType="java.util.Map" resultType="java.util.HashMap">
		select * from tp_cm_res_memory
		where cm_svc_no =
		#{parameter}
		and loop_yn != 'N' and loop_seq > 0
	</select>
	
	<select id="getSQL" parameterType="java.util.Map" resultType="java.lang.String">
		select sql_desc 
		  from tp_db_svc_memory 
		 where db_svc_no = #{db_svc_no}
	</select>

</mapper>